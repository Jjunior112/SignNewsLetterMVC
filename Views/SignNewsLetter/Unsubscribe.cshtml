@model Subscribe

@{
    ViewData["Title"] = "Unsubscribe";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h1 class="card-title">@ViewData["Title"]</h1>
        </div>
        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <div class="mb-4">
                <h4 class="text-secondary">Subscription Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3 text-muted">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-3 text-muted">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-3 text-muted">
                        @Html.DisplayNameFor(model => model.SubscribesSince)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.SubscribesSince)
                    </dd>
                </dl>
            </div>

            <form asp-action="Unsubscribe" class="text-end">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-x-circle"></i> Unsubscribe
                </button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

